{
  "tests": [
    {
      "name": "ApiManagement service - Minimal",
      "definition": "https://schema.management.azure.com/schemas/2017-03-01/Microsoft.ApiManagement.json#/resourceDefinitions/service",
      "json": {
        "type": "Microsoft.ApiManagement/service",
        "apiVersion": "2017-03-01",
        "name": "apimService1",
        "location": "West Us",
        "sku": {
          "name": "Developer",
          "capacity": 1
        },
        "properties": {
          "publisherEmail": "admin@live.com",
          "publisherName": "org"
        },
        "identity": {
          "type": "SystemAssigned"
        }
      }
    },
    {
      "name": "ApiManagement service - invalidType",
      "expectedErrors": [
        {
          "message": "No enum match for: \"Microsoft.ApiManagement/invalidType\"",
          "dataPath": "/type",
          "schemaPath": "/properties/type/type"
        },
        {
          "message": "No enum match for: \"2015-10-12\"",
          "dataPath": "/apiVersion",
          "schemaPath": "/properties/apiVersion/type"
        }
      ],
      "definition": "https://schema.management.azure.com/schemas/2017-03-01/Microsoft.ApiManagement.json#/resourceDefinitions/service",
      "json": {
        "type": "Microsoft.ApiManagement/invalidType",
        "apiVersion": "2015-10-12",
        "name": "apimService1",
        "location": "West Us",
        "sku": {
          "name": "Developer",
          "capacity": 1
        },
        "properties": {
          "publisherEmail": "admin@live.com",
          "publisherName": "org"
        }
      }
    },
    {
      "name": "ApiManagement service - Missing Sku",
      "expectedErrors": [
        {
          "message": "Missing required property: sku",
          "dataPath": "/"
        }
      ],
      "definition": "https://schema.management.azure.com/schemas/2017-03-01/Microsoft.ApiManagement.json#/resourceDefinitions/service",
      "json": {
        "type": "Microsoft.ApiManagement/service",
        "apiVersion": "2017-03-01",
        "name": "apimService1",
        "location": "West Us",
        "properties": {
          "publisherEmail": "admin@live.com",
          "publisherName": "org"
        }
      }
    },
    {
      "name": "ApiManagement service - Missing Properties",
      "expectedErrors": [
        {
          "message": "Missing required property: properties",
          "dataPath": "/"
        }
      ],
      "definition": "https://schema.management.azure.com/schemas/2017-03-01/Microsoft.ApiManagement.json#/resourceDefinitions/service",
      "json": {
        "type": "Microsoft.ApiManagement/service",
        "apiVersion": "2017-03-01",
        "location": "West Us",
        "name": "apimService1",
        "sku": {
          "name": "Basic",
          "capacity": 1
        }
      }
    },
    {
      "name": "ApiManagement service - Non recognizable identity",
      "expectedErrors": [
        {
          "message": "Data does not match any schemas from \"oneOf\"",
          "dataPath": "/identity"
        }
      ],
      "definition": "https://schema.management.azure.com/schemas/2017-03-01/Microsoft.ApiManagement.json#/resourceDefinitions/service",
      "json": {
        "type": "Microsoft.ApiManagement/service",
        "apiVersion": "2017-03-01",
        "name": "apimService1",
        "location": "West Us",
        "sku": {
          "name": "Basic",
          "capacity": 1
        },
        "properties": {
          "publisherEmail": "admin@live.com",
          "publisherName": "org"
        },
        "identity": {
          "type": "CustomerIdentity"
        }
      }
    },
    {
      "name": "ApiManagement service - with KeyVaultId",
      "definition": "https://schema.management.azure.com/schemas/2017-03-01/Microsoft.ApiManagement.json#/resourceDefinitions/service",
      "json": {
        "type": "Microsoft.ApiManagement/service",
        "apiVersion": "2017-03-01",
        "location": "West Us",
        "name": "apimService1",
        "properties": {
          "publisherEmail": "admin@live.com",
          "publisherName": "org",
          "hostnameConfigurations": [
            {
              "type": "Proxy",
              "hostName": "proxy.msitesting.net",
              "keyVaultId": "https://apim-msi-keyvault.vault.azure.net/secrets/msitestingCert",
              "defaultSslBinding": true,
              "negotiateClientCertificate": false
            }
          ]
        },
        "sku": {
          "name": "Basic",
          "capacity": 1
        }
      }
    }
  ]
}